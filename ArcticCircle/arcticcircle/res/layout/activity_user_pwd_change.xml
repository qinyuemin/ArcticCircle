<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_main"
>
    <include layout="@layout/include_title_bar"/>

    <LinearLayout android:layout_width="fill_parent"
                  android:orientation="vertical"
                  android:background="@color/white"
                  android:layout_height="wrap_content">

        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:paddingTop="@dimen/dimen_6_dip"
                      android:paddingBottom="@dimen/dimen_6_dip"
        >

            <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:textSize="15sp"
                      android:textColor="@color/black"
                      android:id="@+id/txt_phone"
                      android:layout_weight="1"
                      android:layout_marginLeft="@dimen/dimen_20_dip"
                      android:text="15135153"
            />

            <com.xiaoma.beiji.controls.view.GetCodeButton android:layout_width="@dimen/dimen_80_dip"
                    android:layout_height="wrap_content"
                    android:text="获取验证码"
                    android:textColor="@color/blue"
                    android:background="@null"
                    android:padding="@dimen/dimen_4_dip"
                    android:id="@+id/btn_code"
                android:textSize="@dimen/text_size_20px"
                    android:layout_marginRight="@dimen/dimen_10_dip"
            />

        </LinearLayout>

        <View android:layout_width="fill_parent"
              android:layout_height="@dimen/base_line_height"
              android:background="@color/color_line"
              android:layout_marginLeft="@dimen/dimen_10_dip"
        />

        <EditText android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:textSize="15sp"
                  android:textColor="@color/black"
                  android:id="@+id/edt_code"
                  android:layout_weight="1"
                  android:layout_marginLeft="@dimen/dimen_20_dip"
                  android:hint="验证码"
                  android:background="@color/white"
                  android:paddingTop="@dimen/dimen_10_dip"
                  android:paddingBottom="@dimen/dimen_10_dip"
        />
        <View android:layout_width="fill_parent"
              android:layout_height="@dimen/base_line_height"
              android:background="@color/color_line"
              android:layout_marginLeft="@dimen/dimen_10_dip"
        />
        <EditText android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:textSize="15sp"
                  android:textColor="@color/black"
                  android:id="@+id/edt_pwd"
                  android:layout_weight="1"
                  android:layout_marginLeft="@dimen/dimen_20_dip"
                  android:hint="密码"
                  android:background="@color/white"
                  android:paddingTop="@dimen/dimen_10_dip"
                  android:paddingBottom="@dimen/dimen_10_dip"
        />
    </LinearLayout>
    <View android:layout_width="fill_parent"
          android:layout_height="@dimen/base_line_height"
          android:background="@color/color_line"
    />

    <Button
            android:id="@+id/btn_next"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_12_dip"
            android:paddingTop="@dimen/dimen_12_dip"
            android:paddingBottom="@dimen/dimen_12_dip"
            android:layout_marginLeft="@dimen/dimen_15_dip"
            android:layout_marginRight="@dimen/dimen_15_dip"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="@drawable/sl_btn_blue"
            android:layout_below="@+id/txt_clause"
    />
</LinearLayout>