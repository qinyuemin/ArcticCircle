<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_main"
>
    <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:background="@color/color_blue"
            android:orientation="horizontal">

        <ImageView android:layout_width="wrap_content"
                   android:layout_height="fill_parent"
                   android:src="@drawable/title_back_click"
                   android:paddingLeft="@dimen/dimen_6_dip"
                   android:paddingRight="@dimen/dimen_6_dip"
                   android:id="@+id/title_bar_title_txt"
        />

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
        >

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="fill_parent"
                          android:orientation="vertical"
                          android:gravity="center_vertical"
            >
                <TextView
                        android:id="@+id/message_system_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="朋友动态"
                        android:textSize="16sp"
                        android:layout_marginRight="@dimen/dimen_5_dip"
                />
                <View android:layout_width="fill_parent" android:layout_height="2dp"
                      android:background="@color/white"
                      android:layout_marginTop="@dimen/dimen_3_dip"
                      android:layout_marginRight="@dimen/dimen_5_dip"
                      android:id="@+id/line1"/>
            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="fill_parent"
                          android:orientation="vertical"
                          android:gravity="center_vertical"
            >
                <TextView
                        android:id="@+id/message_private_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="店铺"
                        android:textSize="16sp"
                        android:layout_marginLeft="@dimen/dimen_5_dip"
                />
                <View android:layout_width="fill_parent" android:layout_height="2dp"
                      android:background="@color/white"
                      android:layout_marginTop="@dimen/dimen_3_dip"
                      android:layout_marginLeft="@dimen/dimen_5_dip"
                      android:id="@+id/line2"/>
            </LinearLayout>
        </LinearLayout>

        <TextView android:layout_width="wrap_content"
                   android:layout_height="fill_parent"
                   android:paddingLeft="@dimen/dimen_4_dip"
                   android:paddingRight="@dimen/dimen_10_dip"
                   android:layout_marginRight="@dimen/dimen_10_dip"
                   android:id="@+id/txt_edit"
                  android:textSize="15sp"
                  android:textColor="#f3fafd"
                  android:text="编辑"
                  android:gravity="center"
        />
    </LinearLayout>

    <View
            android:layout_width="fill_parent"
            android:layout_height="0.1dip"
            android:background="@color/color_line"
    />

    <android.support.v4.view.ViewPager
            android:id="@+id/vPager"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:flipInterval="30"
            android:persistentDrawingCache="animation"/>

</LinearLayout>