<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_main"
        >
    <include layout="@layout/include_title_bar"/>
    <com.xiaoma.beiji.controls.view.ImgPagerView android:layout_width="fill_parent"
                                                 android:layout_height="@dimen/dimen_180_dip"
            android:id="@+id/ipv_img"
            />
    <View android:layout_width="fill_parent" android:layout_height="1px"
          android:background="@color/color_line"
            />
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:background="@color/white"
                  android:orientation="vertical"
                  android:layout_marginTop="@dimen/dimen_15_dip"
            >

        <View android:layout_width="fill_parent" android:layout_height="1px"
              android:background="@color/color_line"
                />

        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:padding="@dimen/dimen_10_dip"
                      android:orientation="horizontal"
                      android:layout_gravity="center"
                >
            <TextView android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:textSize="15sp"
                      android:textColor="@color/black"
                      android:text="aaaa"
                      android:layout_weight="1"
                      android:id="@+id/txt_name"
                    />

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="15sp"
                      android:textColor="@color/color_blue"
                      android:text="25/hehe"
                      android:id="@+id/txt_tag"
                    />
        </LinearLayout>
        <View android:layout_width="fill_parent" android:layout_height="1px"
              android:background="@color/color_line"
              android:layout_marginLeft="@dimen/dimen_10_dip"
              android:layout_marginRight="@dimen/dimen_10_dip"
                />

        <TextView android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_margin="@dimen/dimen_10_dip"
                  android:textSize="15sp"
                  android:textColor="@color/color_gray"
                  android:text="啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊"
                  android:id="@+id/txt_description"
                />
        <View android:layout_width="fill_parent" android:layout_height="1px"
              android:background="@color/color_line"
                />
    </LinearLayout>

</LinearLayout>