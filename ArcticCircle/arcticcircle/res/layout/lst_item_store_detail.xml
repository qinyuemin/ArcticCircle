<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/dimen_6_dip"
                android:paddingBottom="@dimen/dimen_6_dip"
>
    <com.xiaoma.beiji.controls.view.CircularImage android:layout_width="@dimen/dimen_40_dip"
                                                  android:layout_height="@dimen/dimen_40_dip"
                                                  android:scaleType="centerCrop"
                                                  android:layout_centerVertical="true"
                                                  android:id="@+id/img_head"
                                                  android:src="@drawable/ic_logo"
    />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="111"
              android:textSize="14sp"
              android:textColor="#b2b2b2"
              android:id="@+id/txt_time"
              android:layout_marginTop="@dimen/dimen_3_dip"
              android:layout_alignParentRight="true"
    />


    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="韩静"
              android:textSize="16sp"
              android:textColor="@color/color_black"
              android:layout_toRightOf="@+id/img_head"
              android:layout_marginLeft="@dimen/dimen_10_dip"
              android:id="@+id/txt_name"
    />

    <com.xiaoma.beiji.controls.view.chatting.EmotionsTextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text=""
              android:textSize="14sp"
              android:textColor="#b2b2b2"
              android:layout_marginLeft="@dimen/dimen_10_dip"
              android:id="@+id/txt_comment"
              android:layout_below="@+id/txt_name"
              android:layout_toRightOf="@+id/img_head"
              android:layout_marginTop="@dimen/dimen_6_dip"
    />

</RelativeLayout>