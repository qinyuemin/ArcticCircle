<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_main"
>
    <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:background="@color/bg_main"
            android:orientation="horizontal">

        <ImageView android:layout_width="wrap_content"
                   android:layout_height="fill_parent"
                   android:src="@drawable/ic_search"
                   android:paddingLeft="@dimen/dimen_15_dip"
                   android:paddingRight="@dimen/dimen_15_dip"
                   android:layout_marginLeft="@dimen/dimen_5_dip"
                   android:id="@+id/img_search"
        />

        <android.support.design.widget.TabLayout
            android:id="@+id/title_tab_layout"
            android:layout_width="match_parent"
            android:layout_weight="1"
            app:tabSelectedTextColor="@color/blue"
            app:tabTextColor="#C0C3C9"
            android:layout_height="match_parent"
            android:background="#ffffff"/>

        <ImageView android:layout_width="wrap_content"
                   android:layout_height="fill_parent"
                   android:src="@drawable/ic_scanning"
                   android:paddingLeft="@dimen/dimen_10_dip"
                   android:paddingRight="@dimen/dimen_4_dip"
                   android:id="@+id/img_scanning"
        />

        <ImageView android:layout_width="wrap_content"
                   android:layout_height="fill_parent"
                   android:src="@drawable/ic_edit"
                   android:paddingLeft="@dimen/dimen_4_dip"
                   android:paddingRight="@dimen/dimen_10_dip"
                   android:layout_marginRight="@dimen/dimen_10_dip"
                   android:id="@+id/img_publish"
        />
    </LinearLayout>

    <View
            android:layout_width="fill_parent"
            android:layout_height="0.1dip"
            android:background="@color/color_line"
    />

    <android.support.v4.view.ViewPager
            android:id="@+id/vPager"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:flipInterval="30"
            android:persistentDrawingCache="animation"/>

</LinearLayout>