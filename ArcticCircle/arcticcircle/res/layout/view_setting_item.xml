<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/setting_item_icon"
            style="@style/setting_list_icon_size"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_15_dip"
            android:scaleType="centerInside"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/global_layout_margin"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

        <TextView
                android:id="@+id/setting_item_sub_text"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="right|center_vertical"
                android:maxWidth="@dimen/dimen_100_dip"
                android:text="30"
                android:textColor="#b5b5b5"
                android:textSize="12sp"
                android:visibility="visible" />
        <ImageView
                android:id="@+id/setting_item_sub_image"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_25_dip"
                android:gravity="right|center_vertical"
                android:maxWidth="@dimen/dimen_100_dip"
                android:scaleType="center"
                android:visibility="gone"
                />

        <FrameLayout
                android:id="@+id/setting_item_next_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/global_layout_margin"
                android:layout_centerVertical="true" >

            <ImageView
                    android:id="@+id/setting_item_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dimen_5_dip"
                    android:paddingBottom="@dimen/dimen_5_dip"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/sl_icon_next" />

            <CheckBox
                    android:id="@+id/setting_item_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:button="@drawable/sl_checkbox_open_or_close"
                    android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/setting_text_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/global_layout_margin"
            android:layout_toRightOf="@id/setting_item_icon"
            android:orientation="vertical" >

        <TextView
                android:id="@+id/setting_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/dimen_180_dip"
                android:text="11111"
                android:textColor="@color/black"
                android:textSize="16sp" />

        <TextView
                android:id="@+id/setting_item_xtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="xxx11111"
                android:textColor="@color/color_gray"
                android:textSize="12sp"
                android:visibility="gone" />
    </LinearLayout>

    <ImageView
            android:id="@+id/setting_item_red_point"
            android:layout_width="@dimen/dimen_8_dip"
            android:layout_height="@dimen/dimen_8_dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_8_dip"
            android:layout_marginRight="@dimen/dimen_8_dip"
            android:layout_toRightOf="@id/setting_text_layout"
            android:src="@drawable/circle_point"
            android:visibility="visible" />

    <View
            android:id="@+id/setting_item_top_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentTop="true"
            android:background="@color/color_line"
            android:layout_alignLeft="@+id/setting_item_icon"
            android:visibility="gone" />

    <View
            android:id="@+id/setting_item_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignLeft="@+id/setting_item_icon"
            android:layout_alignParentBottom="true"
            android:background="@color/color_line"
            android:visibility="gone" />

</merge>