<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_main"
>

    <include layout="@layout/include_title_bar"/>

    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:background="@color/white"
                  android:orientation="vertical"
                    android:paddingLeft="@dimen/dimen_15_dip"
                android:paddingRight="@dimen/dimen_15_dip"
    >

        <EditText android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:padding="@dimen/dimen_5_dip"
                  android:gravity="top|left"
                  android:id="@+id/edt_content"
                  android:background="@color/white"
                  android:maxLines="4"
                  android:hint="请输入要发布的内容"
                  android:minLines="4"
                  android:singleLine="false"
                  android:textColor="#2f2f2f"
                  android:textSize="15sp"
        />

        <GridView
                android:id="@+id/gv_pic"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:horizontalSpacing="5dp"
                android:numColumns="3"
                android:stretchMode="columnWidth"
                android:verticalSpacing="5dp"
                android:layout_margin="@dimen/dimen_10_dip"
                android:listSelector="@color/transparent"
                android:cacheColorHint="@color/white"
        />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_shop_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_15_dip"
        android:paddingRight="@dimen/dimen_15_dip"
        android:layout_marginTop="@dimen/dimen_10_dip">
        <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_20px"
        android:text="店铺名"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_publish_shop"/>
        <EditText
            android:id="@+id/edt_shopname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_marginLeft="15dp"
            android:singleLine="true"
            android:textSize="@dimen/text_size_20px"
            android:hint="请输入店铺名称"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_shop_price"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_15_dip"
        android:paddingRight="@dimen/dimen_15_dip"
        android:layout_marginTop="@dimen/dimen_10_dip">
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_20px"
            android:text="价格"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_publish_rmb"/>
        <EditText
            android:id="@+id/edt_shopprice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_marginLeft="15dp"
            android:singleLine="true"
            android:textSize="@dimen/text_size_20px"
            android:hint="请输入消费金额"/>
    </LinearLayout>
</LinearLayout>