<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout android:layout_gravity="center_horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="@color/bg_main"
>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/homePageContainer"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"/>
        <View android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#dedee0"
            android:id="@+id/line"
            />
        <com.xiaoma.beiji.controls.view.BottomBarView
            android:id="@+id/bottomBar"
            android:layout_width="fill_parent"
            android:gravity="center_vertical"
            android:layout_height="@dimen/dimen_45_dip"
            />
    </LinearLayout>

    <TextView
            android:id="@+id/message_count_sign_txt"
            android:layout_width="@dimen/dimen_16_dip"
            android:layout_height="@dimen/dimen_16_dip"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="25dp"
            android:textColor="@android:color/white"
            android:text="12+"
            android:gravity="center"
            android:textSize="10sp"
            android:visibility="gone"/>
</RelativeLayout>