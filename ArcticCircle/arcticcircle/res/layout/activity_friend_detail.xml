<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:item="http://schemas.android.com/apk/res/com.xiaoma.beiji"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_main"
>
    <include layout="@layout/include_title_bar"/>
    <ScrollView android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scrollbars="none"
                android:fadingEdge="none"
                android:layout_weight="1"
    >
        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="fill_parent"
                      android:orientation="vertical"
        >

            <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                            android:padding="@dimen/dimen_10_dip"
            >
                <com.xiaoma.beiji.controls.view.CircularImage android:layout_width="@dimen/dimen_40_dip"
                                                              android:layout_height="@dimen/dimen_40_dip"
                                                              android:scaleType="centerCrop"
                                                              android:layout_centerVertical="true"
                                                              android:id="@+id/img_head"
                                                              android:src="@drawable/ic_logo"
                />

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="韩静"
                          android:textSize="16sp"
                          android:textColor="@color/color_black"
                          android:layout_toRightOf="@+id/img_head"
                          android:layout_marginLeft="@dimen/dimen_10_dip"
                          android:id="@+id/txt_name"
                />

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="好友"
                          android:textSize="14sp"
                          android:textColor="@color/white"
                          android:layout_toRightOf="@+id/img_head"
                          android:layout_marginLeft="@dimen/dimen_10_dip"
                          android:background="@drawable/bg_circle_txt_blue1"
                          android:paddingTop="@dimen/dimen_3_dip"
                          android:layout_below="@+id/txt_name"
                          android:paddingBottom="@dimen/dimen_3_dip"
                          android:paddingLeft="@dimen/dimen_8_dip"
                          android:paddingRight="@dimen/dimen_8_dip"
                          android:id="@+id/txt_tag_major"
                          android:layout_marginTop="@dimen/dimen_3_dip"
                />
            </RelativeLayout>

            <RelativeLayout android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_10_dip"
                            android:background="@color/white"
                            android:id="@+id/rl_relation"
                            android:padding="@dimen/dimen_5_dip"

            >
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="和我的关系：二度好友"
                          android:textSize="14sp"
                          android:textColor="#b3b3b3"
                          android:id="@+id/txt_relation_tip"
                />

                <com.xiaoma.beiji.controls.view.CircularImage android:layout_width="@dimen/dimen_40_dip"
                                                              android:layout_height="@dimen/dimen_40_dip"
                                                              android:scaleType="centerCrop"
                                                              android:id="@+id/img_friend1"
                                                              android:src="@drawable/ic_logo"
                                                              android:layout_below="@+id/txt_relation_tip"
                                                              android:layout_marginTop="@dimen/dimen_15_dip"
                                                              android:layout_marginLeft="@dimen/dimen_20_dip"
                />

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="我"
                          android:textSize="14sp"
                          android:id="@+id/txt_friend1_name"
                          android:textColor="#b3b3b3"
                          android:layout_below="@+id/img_friend1"
                          android:layout_alignLeft="@+id/img_friend1"
                          android:layout_alignRight="@+id/img_friend1"
                          android:gravity="center_horizontal"
                          android:layout_marginTop="@dimen/dimen_5_dip"
                />

                <com.xiaoma.beiji.controls.view.CircularImage android:layout_width="@dimen/dimen_40_dip"
                                                              android:layout_height="@dimen/dimen_40_dip"
                                                              android:scaleType="centerCrop"
                                                              android:id="@+id/img_friend2"
                                                              android:src="@drawable/ic_logo"
                                                              android:layout_below="@+id/txt_relation_tip"
                                                              android:layout_marginTop="@dimen/dimen_55_dip"
                                                              android:layout_alignParentRight="true"
                                                              android:layout_marginRight="@dimen/dimen_20_dip"
                />

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="我"
                          android:textSize="14sp"
                          android:id="@+id/txt_friend2_name"
                          android:textColor="#b3b3b3"
                          android:layout_below="@+id/img_friend2"
                          android:layout_alignLeft="@+id/img_friend2"
                          android:layout_alignRight="@+id/img_friend2"
                          android:gravity="center_horizontal"
                          android:layout_marginTop="@dimen/dimen_5_dip"
                />

                <com.xiaoma.beiji.controls.view.CircularImage android:layout_width="@dimen/dimen_40_dip"
                                                              android:layout_height="@dimen/dimen_40_dip"
                                                              android:scaleType="centerCrop"
                                                              android:id="@+id/img_friend3"
                                                              android:src="@drawable/ic_logo"
                                                              android:layout_below="@+id/img_friend1"
                                                              android:layout_marginTop="@dimen/dimen_45_dip"
                                                              android:layout_marginLeft="@dimen/dimen_20_dip"
                />

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="我"
                          android:textSize="14sp"
                          android:id="@+id/txt_friend3_name"
                          android:textColor="#b3b3b3"
                          android:layout_below="@+id/img_friend3"
                          android:layout_alignLeft="@+id/img_friend3"
                          android:layout_alignRight="@+id/img_friend3"
                          android:gravity="center_horizontal"
                          android:layout_marginTop="@dimen/dimen_5_dip"
                />

                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/ic_relation_line1"
                           android:id="@+id/line1"
                           android:layout_below="@+id/txt_relation_tip"
                           android:layout_centerHorizontal="true"
                           android:layout_marginTop="@dimen/dimen_30_dip"

                />

                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/ic_relation_line2"
                           android:id="@+id/line2"
                           android:layout_below="@+id/line1"
                           android:layout_centerHorizontal="true"
                           android:layout_marginTop="@dimen/dimen_10_dip"

                />




            </RelativeLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_mine_item"
                    android:orientation="vertical"
                    android:id="@+id/ll_same_friend"
            >

                <com.xiaoma.beiji.controls.view.SettingItemView android:layout_width="fill_parent"
                                                                android:layout_height="@dimen/dimen_40_dip"
                                                                item:icon="@drawable/ic_friends"
                                                                item:label="我的消息"
                                                                android:id="@+id/stv_friend"
                />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_12_dip"
                    android:background="@drawable/bg_mine_item"
                    android:orientation="vertical">
                <com.xiaoma.beiji.controls.view.SettingItemView android:layout_width="fill_parent"
                                                                android:layout_height="@dimen/dimen_40_dip"
                                                                item:icon="@drawable/ic_dynamic"
                                                                item:label="TA的动态"
                                                                android:id="@+id/stv_dynamic"
                />

                <com.xiaoma.beiji.controls.view.SettingItemView android:layout_width="fill_parent"
                                                                android:layout_height="@dimen/dimen_40_dip"
                                                                item:icon="@drawable/ic_request"
                                                                item:showTopDivider="true"
                                                                item:label="TA的求助"
                                                                android:id="@+id/stv_rquest"
                />

                <com.xiaoma.beiji.controls.view.SettingItemView android:layout_width="fill_parent"
                                                                android:layout_height="@dimen/dimen_40_dip"
                                                                item:icon="@drawable/ic_likeed1"
                                                                item:showTopDivider="true"
                                                                item:label="TA点赞的店铺"
                                                                android:id="@+id/stv_shop"
                />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_12_dip"
                    android:background="@drawable/bg_mine_item"
                    android:orientation="vertical">
                <com.xiaoma.beiji.controls.view.SettingItemView android:layout_width="fill_parent"
                                                                android:layout_height="@dimen/dimen_40_dip"
                                                                item:label="TA看不到我"
                                                                android:id="@+id/stv_1"
                                                                item:isCheckable="true"
                />

                <com.xiaoma.beiji.controls.view.SettingItemView android:layout_width="fill_parent"
                                                                android:layout_height="@dimen/dimen_40_dip"
                                                                item:showTopDivider="true"
                                                                item:label="我的朋友看不到TA"
                                                                android:id="@+id/stv_2"
                                                                item:isCheckable="true"
                />

                <com.xiaoma.beiji.controls.view.SettingItemView android:layout_width="fill_parent"
                                                                android:layout_height="@dimen/dimen_40_dip"
                                                                item:showTopDivider="true"
                                                                item:label="把TA加入黑名单"
                                                                android:id="@+id/stv_3"
                                                                item:isCheckable="true"
                />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="@dimen/title_bar_height"
                  android:orientation="horizontal"
                  android:background="@color/color_blue"
                  android:id="@+id/ll_action"
                  android:visibility="gone"
    >

        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="fill_parent"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:id="@+id/ll_chat"
        >
            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
            android:src="@drawable/ic_friend_chat"
            />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="fill_parent"
                      android:text="私聊"
                      android:textColor="@color/white"
                      android:textSize="16sp"
                      android:gravity="center"
                      android:layout_marginLeft="@dimen/dimen_5_dip"
            />
        </LinearLayout>

        <View android:layout_width="1dp" android:layout_height="fill_parent"
        android:background="@color/white"
        />

        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="fill_parent"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:id="@+id/ll_add"
                      android:background="@color/color_gray1"
        >
            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/ic_friend_add"
            />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="fill_parent"
                      android:text="加好友"
                      android:textColor="@color/white"
                      android:textSize="16sp"
                      android:gravity="center"
                      android:layout_marginLeft="@dimen/dimen_5_dip"
            />
        </LinearLayout>

        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="fill_parent"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:id="@+id/ll_call"
                      android:visibility="gone"
        >
            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/ic_friend_call"
            />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="fill_parent"
                      android:text="拨号"
                      android:textColor="@color/white"
                      android:textSize="16sp"
                      android:gravity="center"
                      android:layout_marginLeft="@dimen/dimen_5_dip"
            />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>