<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
    >
        <CheckBox android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textSize="16sp"
                     android:textColor="@color/black"
                     android:id="@+id/rb_female"
                     android:button="@drawable/sl_checkbox1"
                     android:checked="true"
                     android:padding="@dimen/dimen_10_dip"
                     android:gravity="center"
        />

        <ImageView android:layout_width="@dimen/dimen_30_dip" android:layout_height="@dimen/dimen_30_dip"
                   android:src="@drawable/ic_launcher"
                   android:layout_marginRight="@dimen/dimen_10_dip"
                   android:layout_marginTop="@dimen/dimen_5_dip"
                   android:layout_marginBottom="@dimen/dimen_5_dip"
                   android:scaleType="centerCrop"
                   android:id="@+id/img"
        />
        <TextView android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:textSize="16sp"
                  android:textColor="@color/black"
                  android:text="这里设置的人"
                android:id="@+id/txt_name"
        />

    </LinearLayout>

    <View android:layout_width="fill_parent" android:layout_height="1dp"
          android:background="@color/color_line"/>
</LinearLayout>
