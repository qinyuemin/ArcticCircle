<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:persistentDrawingCache="animation"/>

    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_alignParentBottom="true"
                  android:layout_marginBottom="@dimen/dimen_20_dip"
                  android:orientation="horizontal"
                  android:id="@+id/ll_action"
    >
        <Button
                android:id="@+id/btn_login"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_9_dip"
                android:layout_marginRight="@dimen/dimen_9_dip"
                android:text="登陆"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:paddingTop="@dimen/dimen_12_dip"
                android:paddingBottom="@dimen/dimen_12_dip"
                android:background="@drawable/sl_btn_gray"
                android:layout_marginBottom="@dimen/dimen_18_dip"

        />

        <Button
                android:id="@+id/btn_register"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_9_dip"
                android:layout_marginRight="@dimen/dimen_9_dip"
                android:paddingTop="@dimen/dimen_12_dip"
                android:paddingBottom="@dimen/dimen_12_dip"
                android:text="注册"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_weight="1"
                android:background="@drawable/sl_btn_blue"
                android:layout_marginBottom="@dimen/dimen_18_dip"
        />

    </LinearLayout>

    <com.common.android.lib.controls.view.indicator.IconPageIndicator
            android:id="@+id/indicator"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:padding="10dip"
            android:visibility="invisible"
            android:layout_above="@+id/ll_action"

    />

</RelativeLayout><!-- From: file:/D:/E/Projet/ProjetPersonel/ForZeyu/ArcticCircle/arcticcircle/res/layout/activity_start.xml -->