<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/include_title_bar"/>
    <RelativeLayout android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/white"
                    android:padding="@dimen/dimen_15_dip"
            >
        <com.xiaoma.beiji.controls.view.GetCodeButton android:layout_width="@dimen/dimen_80_dip"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:background="@drawable/border_btn_register_code"
                android:padding="@dimen/dimen_8_dip"
                android:id="@+id/btn_code"
                />
        <EditText android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:hint="手机号/邮箱地址"
                  android:textSize="16sp"
                  android:textColor="@color/black"
                  android:id="@+id/edt_mail"
                  android:background="@drawable/border_edt_register"
                  android:paddingTop="@dimen/dimen_8_dip"
                  android:paddingBottom="@dimen/dimen_8_dip"
                  android:paddingLeft="@dimen/dimen_5_dip"
                  android:paddingRight="@dimen/dimen_5_dip"
                  android:layout_marginRight="@dimen/dimen_8_dip"
                  android:layout_toLeftOf="@+id/btn_code"
                  android:inputType="phone"
                />

        <EditText android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:hint="验证码"
                  android:textSize="16sp"
                  android:textColor="@color/black"
                  android:id="@+id/edt_code"
                  android:background="@drawable/border_edt_register"
                  android:paddingTop="@dimen/dimen_8_dip"
                  android:paddingBottom="@dimen/dimen_8_dip"
                  android:paddingLeft="@dimen/dimen_5_dip"
                  android:paddingRight="@dimen/dimen_5_dip"
                  android:layout_marginTop="@dimen/dimen_10_dip"
                  android:layout_below="@+id/edt_mail"
                  android:inputType="number"
                />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="right"
                  android:textSize="15sp"
                  android:textColor="@color/color_gray1"
                  android:text="请用真实的手机号注册，北极圈将保证不向任何第三方泄露你的隐私"
                  android:layout_marginTop="@dimen/dimen_10_dip"
                  android:id="@+id/txt_tip"
                  android:layout_below="@+id/edt_code"
                />

        <Button
                android:id="@+id/btn_next"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_18_dip"
                android:paddingTop="@dimen/dimen_12_dip"
                android:paddingBottom="@dimen/dimen_12_dip"
                android:text="下一步"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:background="@drawable/sl_btn_blue"
                android:layout_below="@+id/txt_tip"
                />

    </RelativeLayout>
</LinearLayout><!-- From: file:/D:/E/Projet/ProjetPersonel/ForZeyu/ArcticCircle/arcticcircle/res/layout/activity_register.xml -->